<h1>TODOリスト</h1>

<%= link_to "新規作成", new_task_path %>
<br>

<div id="tasks">
	<table border="1">
		<thead>
			<tr>
				<th>ID</th>
				<th>TODO</th>
				<th>詳細</th>
				<th>リンク</th>
			</tr>
		</thead>
		<tbody>
		<% @tasks.each do |task| %>
			<tr>
				<td><%= task.id %></td>
				<td><%= task.name %></td>
				<td><%= task.detail %></td>
				<td>
					<%= link_to "閲覧", task_path(task) %>
					<%= link_to "編集", edit_task_path(task) %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>
